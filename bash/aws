export JAVA_HOME="$(/usr/libexec/java_home)"

export EC2_HOME="/usr/local/Library/LinkedKegs/ec2-api-tools/jars"
export EC2_AMITOOL_HOME="/usr/local/Library/LinkedKegs/ec2-ami-tools/jars"
export AWS_IAM_HOME="/usr/local/opt/aws-iam-tools/jars"

export AWS_CREDENTIAL_FILE=$HOME/.aws-credentials-master
export AWS_ACCESS_KEY="$(/bin/cat "$HOME"/.aws-credentials | grep AWSAccessKeyId | sed -e 's/.*=//')"
export AWS_SECRET_KEY="$(/bin/cat "$HOME"/.aws-credentials | grep AWSSecretKey | sed -e 's/.*=//')"

export EC2_CERT="~/.ssh/aws.pem"
export EC2_PRIVATE_KEY="~/.ssh/id_rsa"
